<Window x:Class="Contractor_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contractor_Management"
        mc:Ignorable="d"
        Title="MCM - Mark's Contractor Manager" Height="640" Width="770"
        FontFamily="Arial" >

    <Grid>
        <Grid.Resources>

         

            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="0,0,5,5" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
Background="{TemplateBinding Background}"
BorderBrush="Black"
BorderThickness="1"
CornerRadius="6">
                                <ContentPresenter
x:Name="contentPresenter"
Margin="{TemplateBinding Padding}"
HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
Content="{TemplateBinding Content}"
ContentTemplate="{TemplateBinding ContentTemplate}" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

            </Style>
            <Style TargetType="{x:Type ListBox}">
                <Setter Property="Margin" Value="0,0,5,0" />

            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Margin" Value="0,-10,0,0" />
                <Setter Property="Padding" Value="5,5" />
                
            </Style>
            <Style TargetType="{x:Type DatePicker}">
                <Setter Property="Margin" Value="0,-10,0,0" />
                <Setter Property="Padding" Value="5,5" />

            </Style>
            <Style TargetType="{x:Type ComboBox}">
                <Setter Property="Margin" Value="0,-10,0,0" />
                <Setter Property="Padding" Value="5,5" />

            </Style>
            <Style TargetType="{x:Type Label}">
                <Setter Property="Margin" Value="-5,-5,0,0" />

            </Style>
        </Grid.Resources>
        <StackPanel>
            <TextBlock  Padding="5" FontSize="14" Background="#3498db" FontFamily="./Resources/#Orbitron" TextAlignment="Left"><Run FontWeight="Bold" FontSize="30">MCM</Run>  Mark's Contractor Manager</TextBlock>
            <TabControl>
                <TabItem Header="👥 Contractors" Width="100" Height="40">
                    <Grid Height="800">
                       
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
   
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="300"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            
                            
                        </Grid.RowDefinitions>
                        <Button Name="DisplayButton" Click="DisplayButton_Click" Tag="0" Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" FontSize="16" Background="LightGray">
                            ➖ All
                        </Button>
                        <Button Name="DeleteContractor" Click="DeleteContractor_Click" Tag="0" Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" FontSize="16" Foreground="White" Background="Red">
                            🗑️ Delete
                        </Button>
                        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">Filter by name:</Label>
                        <TextBox Name="FilterContractorTextBox" TextChanged="ContractorTextbox_Change" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="25" Width="300">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </TextBox.Resources>

                        </TextBox>


                        <ListBox x:Name="contractorList" SelectionChanged="ContractorList_Click" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" FontSize="16">
                            <ListBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </ListBox.Resources>

                        </ListBox>
                        <TextBlock Padding="5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Background="#3498db" FontFamily="./Resources/#Orbitron" TextAlignment="Left">Add/Edit Contractor</TextBlock>
                        <Label Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">First Name</Label>
                        <TextBox Name="FirstNameTextBox" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Width="300">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </TextBox.Resources>

                        </TextBox>
                        <Label Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">Last Name</Label>
                        <TextBox Name="LastNameTextBox" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Width="300">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </TextBox.Resources>

                        </TextBox>
                        <Label Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">Start Date</Label>
                        <DatePicker Name="StartDatePicker" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Width="300">
                            <DatePicker.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </DatePicker.Resources>

                        </DatePicker>
                        <Label Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">Wage</Label>
                        <TextBox Name="HourlyWageTextBox" Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Width="300">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </TextBox.Resources>

                        </TextBox>

                        <Button Name="ClearButton" Click="ClearButton_Click" Grid.Row="4" Grid.RowSpan="2" Grid.Column="4" FontSize="16" Background="LightGray">
                            🧹 Clear
                        </Button>

                        <Button Name="SaveButton" Click="SaveButton_Click" Grid.Row="6" Grid.RowSpan="2" Grid.Column="4" FontSize="16" Background="Green" Foreground="White">
                            💾 Save
                        </Button>
                        



                    </Grid>
                   
                </TabItem>
                <TabItem Header="📋 Jobs" Width="100" Height="40">


                    <Grid Height="800">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="300"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>
                            <RowDefinition Height="25"></RowDefinition>


                        </Grid.RowDefinitions>
                        <Button Name="JobDisplayButton" Click="JobDisplayButton_Click" Tag="0" Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" FontSize="16" Background="LightGray">
                            ➖ All
                        </Button>
                        <Button Name="DeleteJob" Click="DeleteJob_Click" Tag="0" Grid.Row="0" Grid.RowSpan="2" Grid.Column="4" FontSize="16" Foreground="White" Background="Red">
                            🗑️ Delete
                        </Button>

                        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" FontWeight="Bold">Filter by cost between</Label>
                        <TextBox Name="MinCostTextBox" TextChanged="Cost_Change"  Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Height="25" Width="100">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </TextBox.Resources>

                        </TextBox>
                        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="12" TextAlignment="Left">and</TextBlock>
                        <TextBox Name="MaxCostTextBox" TextChanged="Cost_Change" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Height="25"  Width="100">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </TextBox.Resources>

                        </TextBox>





                        <ListBox x:Name="jobList" SelectionChanged="JobList_Click" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" FontSize="16">
                            <ListBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </ListBox.Resources>

                        </ListBox>
                        <TextBlock Padding="5" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Background="#3498db" FontFamily="./Resources/#Orbitron" TextAlignment="Left">Add/Edit Job</TextBlock>
                        <Label Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">Title</Label>
                        <TextBox Name="JobTitleTextBox" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Width="300">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </TextBox.Resources>

                        </TextBox>
                        <Label Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">Contractor</Label>
                        <ComboBox Name="ContractorComboBox" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Width="300">
                            <ComboBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </ComboBox.Resources>

                        </ComboBox>
                        <Label Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">Start Date</Label>
                        <DatePicker Name="JobDatePicker" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Width="300">
                            <DatePicker.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </DatePicker.Resources>

                        </DatePicker>
                        <Label Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontWeight="Bold" Height="25" Width="300">Cost</Label>
                        <TextBox Name="JobCostTextBox" Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Width="300">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" 
Value="6" />
                                </Style>
                            </TextBox.Resources>

                        </TextBox>
                        <CheckBox x:Name="Completed" Grid.Row="8" Grid.Column="0" Margin="0,5" FontWeight="Bold"
>Completed</CheckBox>
                        <Button Name="ClearJobButton" Click="ClearButton_Click" Grid.Row="4" Grid.RowSpan="2" Grid.Column="4" FontSize="16" Background="LightGray">
                            🧹 Clear
                        </Button>

                        <Button Name="SaveJobButton" Click="JobSaveButton_Click" Grid.Row="6" Grid.RowSpan="2" Grid.Column="4" FontSize="16" Background="Green" Foreground="White">
                            💾 Save
                        </Button>




                    </Grid>
                </TabItem>
            </TabControl>



     

        </StackPanel>
        

    </Grid>
</Window>
